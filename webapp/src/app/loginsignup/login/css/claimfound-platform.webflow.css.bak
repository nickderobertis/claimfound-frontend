.site-banner {
  height: auto;
}

.site-nav-bar {
  border-bottom: 2px solid #2d66b1;
  background-color: transparent;
}

.site-nav-menu {
  margin-top: 11px;
}

.page-body {
  height: 825px;
  border-color: #2d66b1;
  background-color: #f5f5f5;
}

.sign-in-container {
  height: 675px;
}

.sign-in-div-block {
  width: 425px;
  height: 425px;
  margin-top: 10%;
  margin-left: 275px;
  background-color: #fff;
  box-shadow: 0 1px 5px 0 #2d66b1;
}

.sign-in-heading {
  width: 375px;
  margin-top: 0px;
  margin-left: 32px;
  padding-top: 24px;
  border-bottom: 2px solid #2d66b1;
  font-family: Varela, sans-serif;
  font-size: 27px;
  font-weight: 400;
  text-align: center;
}

.sign-in-form-wrapper {
  width: 375px;
  margin-top: 27px;
  margin-left: 32px;
}

.sign-in-label {
  font-family: Varela, sans-serif;
  font-size: 13px;
}

.sign-in-text-field {
  margin-bottom: 25px;
  border: 1px solid #2d66b1;
  font-family: Varela, sans-serif;
  color: #646464;
  font-size: 13px;
  font-weight: 400;
}

.sign-in-check-box {
  border: 1px solid #000;
}

.sign-in-check-box-label {
  font-family: Varela, sans-serif;
  font-size: 12px;
}

.sign-in-check-box-wrapper {
  margin-top: -9px;
  margin-bottom: 9px;
  margin-left: 11px;
}

.sign-in-submit-button {
  width: 300px;
  margin-top: 32px;
  margin-left: 34px;
  float: none;
  clear: none;
  font-family: Varela, sans-serif;
}

.sign-in-link {
  margin-top: 0px;
  margin-right: 0px;
  margin-left: 42px;
}

.sign-in-link._1 {
  margin-left: 25px;
}

.logo-container-link.w--current {
  margin-top: 6px;
}

.site-banner-nav-link {
  font-family: Varela, sans-serif;
}

.body-container {
  height: 875px;
}

.body-row-wrapper {
  width: 950px;
  margin-left: 0px;
  padding-left: 14px;
}

.body-column-1 {
  height: 700px;
  margin-top: 0px;
  background-color: #fff;
}

.body-column-2 {
  margin-top: 60px;
  padding-left: 0px;
}

.body-column-1-row-wrapper {
  margin-top: 5px;
  margin-bottom: 10px;
}

@media (max-width: 991px) {
  .sign-in-div-block {
    margin-left: 150px;
  }
  .sign-in-text-field {
    width: 375px;
  }
  .sign-in-check-box-wrapper {
    margin-top: -5px;
  }
  .sign-in-submit-button {
    width: 281.25px;
    margin-top: 38px;
    margin-left: 43px;
  }
  .sign-in-link {
    margin-left: 33px;
    color: #2d66b1;
    font-weight: 400;
    text-decoration: none;
  }
}

@media (max-width: 767px) {
  .sign-in-div-block {
    margin-left: 70px;
  }
}

@media (max-width: 479px) {
  .sign-in-div-block {
    width: 250px;
    margin-left: 35px;
  }
  .sign-in-heading {
    width: 225px;
    margin-left: 13px;
    font-size: 20px;
  }
  .sign-in-form-wrapper {
    width: 225px;
    margin-left: 13px;
  }
  .sign-in-label {
    font-size: 12px;
  }
  .sign-in-text-field {
    width: 225px;
  }
  .sign-in-submit-button {
    width: 168.75px;
    margin-top: 25px;
    margin-left: 20px;
  }
  .sign-in-link {
    margin-left: 29px;
    font-size: 13px;
  }
  .sign-in-link._1 {
    margin-left: 30px;
    float: left;
    clear: left;
  }
}